<mujoco model="Self-Balancing Robot">

  <compiler angle="degree" inertiafromgeom="true"/>

  <option gravity="0 0 -9.81"/>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2="0.6 0.8 1.0" width="256" height="256"/>
  </asset>


  <worldbody>
    <body name="chassis" pos="0 0 0.20">
      <inertial pos="0.0725 0.12 0.1623"
                mass="3.353"
                fullinertia="0.22954833625 0.24512389101 0.03559648963 -0.0000325961 -0.00098122792 0.0062506144"/>
      <site name="imu_site" type="sphere" size="0.01" rgba="1 0 0 0.5"/>
      <geom name="chassis_geom" type="box" size="0.07 0.12 0.1725" rgba="127 0 0 0.5"/>
      <joint type="free" name="floating_joint"/>

      <body name="axle" pos="0 0 -0.15">
        <geom name="axle_geom" type="cylinder" fromto="0 -0.135 0 0 0.135 0" size="0.02" rgba="0.5 0.5 0.5 1" contype="0" conaffinity="0"/>
        
        <body name="left_wheel" pos="0 -0.135 0">
          <joint name="left_wheel_joint" type="hinge" axis="0 1 0"/>
          <geom name="left_wheel_geom" type="cylinder" size="0.0625 0.0125" rgba="0.1 0.1 0.1 1" euler="90 0 0" mass="0.2" contype="1" conaffinity="1"/>
        </body>

        <body name="right_wheel" pos="0 0.135 0">
          <joint name="right_wheel_joint" type="hinge" axis="0 1 0"/>
          <geom name="right_wheel_geom" type="cylinder" size="0.0625 0.0125" rgba="0.1 0.1 0.1 1" euler="90 0 0" mass="0.2" contype="1" conaffinity="1"/>
        </body>
      </body>
    </body>
  </worldbody>

  <contact>
    <exclude body1="chassis" body2="left_wheel"/>
    <exclude body1="chassis" body2="right_wheel"/>
  </contact>


  <actuator>
    <motor name="left_motor" joint="left_wheel_joint" gear="1" ctrllimited="true" ctrlrange="-10 10"/>
    <motor name="right_motor" joint="right_wheel_joint" gear="1" ctrllimited="true" ctrlrange="-10 10"/>
  </actuator>


  <sensor>
    <accelerometer name="accelerometer" site="imu_site"/>
    <gyro name="gyroscope" site="imu_site"/>
    <subtreecom name="robot_com" body="chassis"/>
    <jointpos name="left_wheel_pos" joint="left_wheel_joint"/>
    <jointpos name="right_wheel_pos" joint="right_wheel_joint"/>

    <jointvel name="left_wheel_vel" joint="left_wheel_joint"/>
    <jointvel name="right_wheel_vel" joint="right_wheel_joint"/>

  </sensor>

</mujoco>